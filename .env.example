# NIC Watchdog Configuration
# Copy this file to .env and customize the values

# Network interface to monitor (e.g., eth0, enp0s3, ens18)
NIC=eth0

# First ping target (IP address)
PING_TARGET_1=8.8.8.8

# Second ping target (IP address)
PING_TARGET_2=1.1.1.1

# Number of consecutive failures before restarting NIC
FAIL_THRESHOLD=3

# Seconds between connectivity checks
SLEEP_INTERVAL=30

# Discord webhook URL (optional, leave empty to disable notifications)
DISCORD_WEBHOOK=
